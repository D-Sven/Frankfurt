<PropertyList>

    <path>nwbridge2.ac</path>

    <animation>
        <object-name>stripe</object-name>
        <enable-hot type="bool">false</enable-hot>
    </animation>

   <animation>
    <type>material</type>
    <object-name>stripe</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.5</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.12 </red>
      <green> 0.1 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>stripe</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.50</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

</PropertyList>